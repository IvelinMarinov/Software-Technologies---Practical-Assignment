
@{
    ViewBag.Title = "Categories";
}

<div class="container">
    <div class="well">
        <div class="row">
            <div class="col-sm-4">

                <a href="/Article/Club">
                    <img src="~/Content/Images/Club.jpg" class="img-responsive img-rounded" alt="Arsenal FC logo" />
                    <p class="text-center lead">Club</p>
                </a>
            </div>
            <div class="col-sm-4">
                <a href="/Article/League">
                    <img src="~/Content/Images/League.png" class="img-responsive img-rounded" alt="Premier League Logo"/>
                    <p class="text-center lead">League</p>
                </a>
            </div>
            <div class="col-sm-4">
                <a href="/Article/Players">
                    <img src="~/Content/Images/Players.jpg" class="img-responsive img-rounded" alt="Arsenal players"/>
